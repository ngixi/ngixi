module Benchmark

from "wasi/time" include Time
from "int64" include Int64
from "int32" include Int32
use Int32.{ (+), (<=), (<) }

let fib = (n: Int32) => {
  if (n <= 1l) {
    n
  } else {
    let mut a: Int32 = 0l
    let mut b: Int32 = 1l
    let mut i: Int32 = 2l
    while (i <= n) {
      let temp: Int32 = a + b
      a = b
      b = temp
      i += 1l
    }
    b
  }
}

// Simple comma formatting function (simplified)
