module Benchmark

from "wasi/time" include Time
from "int64" include Int64
let fib = (n) => {
  if (n <= 1) {
    n
  } else {
    let mut a = 0
    let mut b = 1
    let mut i = 2
    while (i <= n) {
      let temp = a + b
      a = b
      b = temp
      i = i + 1
    }
    b
  }
}

